;=====================================================
;   module/title
;=====================================================
[module/title]
type = internal/xwindow

format = <label>
format-background = ${colors.material-dark-background}
format-padding = ${variables.module-padding}

label = %{T2}%{T-} %title%
label-maxlen = ${variables.module-maxlen}

;=====================================================
;   module/i3
;=====================================================
[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

format-background = ${colors.material-dark-background}

label-focused = %{B#5294e2 F#2a313b}%{T3}%{T-}%{F-B-} %index% %{B#2a313b F#5294e2}%{T3}%{T-}%{F-B-}

label-unfocused = %{T3} %{T-} %index% %{T3} %{T-}

label-visible = %{B#414a59 F#2a313b}%{T3}%{T-}%{F-B-} %index% %{B#2a313b F#414a59}%{T3}%{T-}%{F-B-}

label-urgent = %{B#cc575d F#2a313b}%{T3}%{T-}%{F-B-} %index% %{B#2a313b F#cc575d}%{T3}%{T-}%{F-B-}

;=====================================================
;   module/mpd
;=====================================================
[module/mpd]
type = internal/mpd

format-playing = <icon-prev><toggle><icon-next>
format-playing-padding = ${variables.module-padding}
format-paused = <icon-prev><toggle><icon-next>
format-paused-padding = ${variables.module-padding}

icon-play = %{T2}%{T-}
icon-play-background = ${colors.material-light-background}

icon-pause = %{T2}%{T-}
icon-pause-background = ${colors.material-light-background}

icon-next = %{T2}%{T-}
icon-next-background = ${colors.material-light-background}

icon-prev = %{T2}%{T-}
icon-prev-background = ${colors.material-light-background}

label-offline = mpd is offline
label-offline-background = ${colors.material-light-background}


;=====================================================
;   module/mpd_title
;=====================================================
[module/mpd_title]
type = internal/mpd

format-playing = <label-song>
format-playing-background = ${colors.material-dark-background}
format-playing-padding = ${variables.module-padding}
format-paused = <label-song>
format-paused-background = ${colors.material-dark-background}
format-paused-padding = ${variables.module-padding}
format-stopped = <label-song>
format-stopped-background = ${colors.material-dark-background}
format-stopped-padding = ${variables.module-padding}

label-song-maxlen     = ${variables.module-maxlen}
label-song-ellipsis   = true
label-song            = %title%

