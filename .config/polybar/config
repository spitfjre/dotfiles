;=====================================================
;   variables
;=====================================================
[variables]
bar-height = 18
bar-border-size = 1

label-padding = 1
label-maxlen = 50

;=====================================================
;   fonts
;=====================================================
[fonts]
font-0 = Iosevka:size=9:antialias=true;2
font-1 = Material Icons:size=10:antialias=true;3
font-2 = Iosevka:size=12:antialias=true;2

;=====================================================
;   bar/top
;=====================================================
[bar/top]
monitor = ${env:MONITOR}
height = ${variables.bar-height}
bottom = false
fixed-center = true

border-bottom-size = ${variables.bar-border-size}
border-color = ${colors.black}

background = ${colors.material-light-background}
foreground = ${colors.material-foreground}

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}

modules-left = user lpd i3 wifi eth ldl title
modules-center = 
modules-right = mpd rld memory rsd cpu rsd temperature rsd volume rdp date 

