;=====================================================
;   colors
;=====================================================
[colors]
material-foreground = ${xrdb:material_foreground}
material-dark-background = ${xrdb:material_dark_background}
material-light-background = ${xrdb:material_light_background}
material-primary = ${xrdb:material_primary}
material-warn = ${xrdb:material_warn}
black = #000000

;=====================================================
;   variables
;=====================================================
[variables]
bar-height = 22
bar-border-size = 1

module-padding = 1
module-maxlen = 50

;=====================================================
;   fonts
;=====================================================
[fonts]
font-0 = Iosevka Term:fontformat=truetype:pixelsize=9:antialias=true;2
font-1 = Material Icons:fontformat=truetype:pixelsize=11:antialias=true;3
font-2 = Iosevka Term:fontformat=truetype:pixelsize=16:antialias=true;3

;=====================================================
;   bar/top
;=====================================================
[bar/top]
monitor = ${env:MONITOR}
height = ${variables.bar-height}
bottom = false
fixed-center = true

border-bottom-size = ${variables.bar-border-size}
border-color = ${colors.black}

background = ${colors.material-light-background}
foreground = ${colors.material-foreground}

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}

modules-left = wifi eth lpd i3 ldl wifi_up eth_up wifi_down eth_down lld title ldp lpl
modules-center = 
modules-right = rlp rpd mpd_title rdl mpd rlp battery rpd memory rdl cpu rld temperature rdl volume rld date rdl time rlp user

