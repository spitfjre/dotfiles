;=====================================================
;   module/time
;=====================================================
[module/time]
type = internal/date
inherit = section/base_right_primary
interval = 1
time = %H:%M

label = %{T6}%{T-} %{T2}%time%%{T-}

;=====================================================
;   module/date
;=====================================================
[module/date]
type = internal/date
inherit = section/base_right_primary
interval = 1
date = %a %d.%m

label = %{T6}%{T-} %{T2}%date%%{T-}

