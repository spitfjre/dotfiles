;=====================================================
;   module/i3
;=====================================================
[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

format-background = ${colors.material-dark-background}

label-focused = %{B#5294e2 F#2a313b}%{T3}%{T-}%{F-B-} %index% %{B#2a313b F#5294e2}%{T3}%{T-}%{F-B-}
label-unfocused = %{T3} %{T-} %index% %{T3} %{T-}
label-visible = %{B#414a59 F#2a313b}%{T3}%{T-}%{F-B-} %index% %{B#2a313b F#414a59}%{T3}%{T-}%{F-B-}
label-urgent = %{B#cc575d F#2a313b}%{T3}%{T-}%{F-B-} %index% %{B#2a313b F#cc575d}%{T3}%{T-}%{F-B-}

;=====================================================
;   module/mpd
;=====================================================
[module/mpd]
type = internal/mpd
inherit = section/base_right_light

format-playing = <label-song> %{T3}%{T-} <icon-prev><toggle><icon-next>
format-paused = <label-song> %{T3}%{T-} <icon-prev><toggle><icon-next>

icon-play = %{T2}%{T-}
icon-pause = %{T2}%{T-}
icon-next = %{T2}%{T-}
icon-prev = %{T2}%{T-}

label-song-maxlen = ${variables.label-maxlen}
label-song-ellipsis = true
label-song = ♪ %artist% - %title%

label-offline = mpd is offline

;=====================================================
;   module/cpu
;=====================================================
[module/cpu]
type = internal/cpu
inherit = section/base_right_dark
interval = 1

label = %{T2}%{T-} %percentage:3%%

