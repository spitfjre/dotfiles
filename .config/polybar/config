;=====================================================
;   module/battery
;=====================================================
[module/battery]
type = internal/battery
inherit = section/base_right_dark
battery = BAT0
adapter = AC
full-at = 95

format-charging = <label-charging>
label-charging = %{T2}%{T-} %percentage:3%%

format-discharging = <label-discharging>
label-discharging = %{T2}%{T-} %percentage:3%%

format-full = <label-full>
label-full = %{T2}%{T-} %percentage:3%%

