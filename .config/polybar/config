[colors]
custom_foreground 	    = ${xrdb:custom_foreground}
custom_background_dark 	= ${xrdb:custom_background_dark}
custom_background_light = ${xrdb:custom_background_light}
custom_primary    	 	= ${xrdb:custom_primary}
black					= ${xrdb:color0}
red    	 				= ${xrdb:color1}
white					= ${xrdb:color7}

[bar/top]
monitor      = ${env:MONITOR}
height       = 25
bottom       = false
fixed-center = false

border-bottom-color = ${colors.black}
border-bottom-size  = 1

background = ${colors.custom_background_light}
foreground = ${colors.custom_foreground}

font-0 = Roboto Mono:fontformat=truetype:size=9:antialias=true;2
font-1 = Roboto:fontformat=truetype:size=9:antialias=true;2
font-2 = Material Icons:fontformat=truetype:size=11:antialias=true;4

modules-left   = i3
modules-center = mpd_controls mpd
modules-right  = battery memory cpu temperature wifi_down eth_down wifi_up eth_up volume date time

[module/i3]
type 			= internal/i3
index-sort      = true
wrapping-scroll = true
strip-wsnumbers = false
pin-workspaces  = true

ws-icon-0 = 1;%{T3}%{T-}: %{T3}%{T-}
ws-icon-1 = 2;%{T3}%{T-}: %{T3}%{T-}
ws-icon-2 = 3;%{T3}%{T-}: %{T3}%{T-}
ws-icon-3 = 4;%{T3}%{T-}: %{T3}%{T-}
ws-icon-4 = 5;%{T3}%{T-}: %{T3}%{T-}
ws-icon-5 = 6;%{T3}%{T-}: %{T3}%{T-}
ws-icon-6 = 7;%{T3}%{T-}: %{T3}%{T-}
ws-icon-7 = 8;%{T3}%{T-}: %{T3}%{T-}
ws-icon-8 = 9;%{T3}%{T-}: %{T3}%{T-}

label-focused 			   = %icon%
label-focused-foreground   = ${colors.white}
label-focused-background   = ${colors.custom_primary}
label-focused-padding      = 2
label-unfocused 		   = %icon%
label-unfocused-foreground = ${colors.custom_foreground}
label-unfocused-background = ${colors.custom_background_light}
label-unfocused-padding    = 2
label-visible 			   = %icon%
label-visible-foreground   = ${colors.custom_primary}
label-visible-background   = ${colors.custom_background_light}
label-visible-padding      = 2
label-urgent 			   = %icon%
label-urgent-foreground    = ${colors.red}
label-urgent-background    = ${colors.custom_background_light}
label-urgent-padding       = 2

[module/mpd]
type = internal/mpd

format-playing         = <label-song>
format-playing-padding = 2
format-paused          = <label-song>
format-paused-padding  = 2
format-stopped         = <label-song>
format-stopped-padding = 2

format-playing-prefix            = %{T3}%{T-}
format-playing-prefix-foreground = ${colors.custom_primary}
format-playing-prefix-background = ${colors.custom_background_light}
format-paused-prefix             = %{T3}%{T-}
format-paused-prefix-foreground  = ${colors.custom_primary}
format-paused-prefix-background  = ${colors.custom_background_light}
format-stopped-prefix            = %{T3}%{T-}
format-stopped-prefix-foreground = ${colors.custom_primary}
format-stopped-prefix-background = ${colors.custom_background_light}

label-song-maxlen       = 100
label-song-ellipsis     = true
label-song              = %artist% - %title%
label-song-foreground   = ${colors.custom_foreground}
label-song-background   = ${colors.custom_background_light}
label-song-font		    = 2
label-song-padding-left = 1

[module/mpd_controls]
